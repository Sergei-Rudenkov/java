package grep;

import java.util.*;


public class Line {
	String line, word;
	int times = 0;
	Scanner scn = new Scanner(System.in);
	 List<String> lines = new ArrayList<String>();
	void getword(){
		System.out.println("Введети ключевое слово");
		word = scn.nextLine(); 
	}
	
	void search(){
		for (int i = 0; i < 3; i++){
			String[] sentence = line.split(word);
			for(String w: sentence){
				if(w.equals(word));
				System.out.println(line);
			}
		}
	}
	void printout(){
		
	}
		public void Scaning() {	
			do
			{
				System.out.println("Веведите строку");
			 line = scn.nextLine();
			 times++;
			
			 lines.add(line);
			}while ( times < 3);
		}	
}

