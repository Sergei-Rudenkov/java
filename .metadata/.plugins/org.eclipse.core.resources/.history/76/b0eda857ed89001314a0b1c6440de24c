package chess;

public class Board {
	Board(){
		String[][] board = new String[8][8];
        for (int i = 0; i < 8; i++){
                for (int j = 0; j < 8; j++){
                        board[i][j] = "-";
                }
        }
    }
	void boardShowMove(int[] i){
		
	}
	static void print(Board a){
		for (int i = 0; i < 8; i++){
            for (int j = 0; j < 8; j++){
                    System.out.print(a[i][j] + " ");
            }
            System.out.println();
    }
    System.out.println();
}
	

	public static void main(String[] args) {
		Board brd = new Board();
		print(brd);

	}

}
