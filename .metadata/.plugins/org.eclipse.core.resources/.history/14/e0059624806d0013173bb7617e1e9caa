package calculator;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Reader extends JFrame {
	JButton plus, minus, multiply, sharing, ok, b1, b2, b3, b4, b5, b6, b7, b8, b9, b0;
	JLabel value;
	int i=0, j, stayresult;
	String a, b;
	
	public Reader(String s){
		super(s);
		setLayout(new FlowLayout());
		plus = new JButton("+");
		minus = new JButton("-");
		multiply = new JButton("*");
		sharing = new JButton("/");
		ok = new JButton("Посчитать");
		value = new JLabel("");
		b1 = new JButton("1");
		b2 = new JButton("2");
		b3 = new JButton("3");
		b4 = new JButton("4");
		b5 = new JButton("5");
		b6 = new JButton("6");
		b7 = new JButton("7");
		b8 = new JButton("8");
		b9 = new JButton("9");
		b0 = new JButton("0");
		
		add(b1);
		add(b2);
		add(b3);
		add(b4);
		add(b5);
		add(b6);
		add(b7);
		add(b8);
		add(b9);
		add(b0);
		add(plus);
		add(minus);
		add(multiply);
		add(sharing);
		add(ok);
		add(value);
	}
public class eHandler implements ActionListener{
	public void actionPerformed(ActionEvent e) {
		if(e.getSource() == b1){
			j = i * 10 + 1;
			stayresult = j;
			
		}
		if(e.getSource() == b2){
			j = i * 10 + 2;
			stayresult = j;
		}
		if(e.getSource() == b3){
			j = i * 10 + 3;
			stayresult = j;
		}
		if(e.getSource() == b4){
			j = i * 10 + 4;
			stayresult = j;
		}
		if(e.getSource() == b5){
			j = i * 10 + 5;
			stayresult = j;
		}
		if(e.getSource() == b6){
			j = i * 10 + 6;
			stayresult = j;
		}
		if(e.getSource() == b7){
			j = i * 10 + 7;
			stayresult = j;
		}
		if(e.getSource() == b8){
			j = i * 10 + 8;
			stayresult = j;
		}
		if(e.getSource() == b9){
			j = i * 10 + 9;
			stayresult = j;
		}
		if(e.getSource() == b0){
			j = i * 10;
			stayresult = j;
		}
		if(e.getSource() == ok){
		String a = Integer.toString(j);  
		value.setText(a);
		System.out.println(a);
		}
	}
}

}
