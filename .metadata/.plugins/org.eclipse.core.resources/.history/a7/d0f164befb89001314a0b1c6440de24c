package chess;

public class Board {
	
	static String[][] board = new String[8][8];
	Board(){
        for (int i = 0; i < 8; i++){
                for (int j = 0; j < 8; j++){
                        board[i][j] = "-";
                }
        }
    }
	void boardShowMove(Figure fig){
		board[i][j] = "R";
	}
	static void print(String[][] a){
		for (int i = 0; i < 8; i++){
            for (int j = 0; j < 8; j++){
                    System.out.print(a[i][j] + " ");
            }
            System.out.println();
    }
    System.out.println();
}
	

	public static void main(String[] args) {
		Board brd = new Board();
		King blackKing = new King();
		King whiteKing = new King();
		Root whiteRoot = new Root();
		brd.print(board);

	}

}
