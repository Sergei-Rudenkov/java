package calculator;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Reader extends JFrame {
	JButton plus, minus, multiply, sharing, ok, b1, b2, b3, b4, b5, b6, b7, b8, b9, b0;
	JTextField value;
	int i, j;
	String a, b;
	
	public Reader(String s){
		super(s);
		setLayout(new FlowLayout());
		plus = new JButton("+");
		minus = new JButton("-");
		multiply = new JButton("*");
		sharing = new JButton("/");
		ok = new JButton("Посчитать");
		value = new JTextField(10);
		add(value);
		add(b1);
		add(b2);
		add(b3);
		add(b4);
		add(b5);
		add(b6);
		add(b7);
		add(b8);
		add(b9);
		add(b0);
		add(plus);
		add(minus);
		add(multiply);
		add(sharing);
		add(ok);
	}

}
